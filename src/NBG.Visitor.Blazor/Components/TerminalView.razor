@using NBG.Visitor.Storage.Dtos;
@using MudBlazor;

<MudCarousel @ref="carousel" Style="height: 100vh; margin: 0;" AutoCycle="false" ShowArrows="false" ShowDelimiters="false" TData="object">
    <MudCarouselItem>
        <TerminalHome OnNext=@(() => carousel.Next()) />
    </MudCarouselItem>
    <MudCarouselItem>
        <TerminalRegister @ref="form" OnBack=@(() => carousel.Previous()) OnNext=@(() => Console.WriteLine(form.FormData)) />
    </MudCarouselItem>
</MudCarousel>

<footer>
    @footer
</footer>

@code {
    private MudCarousel<object> carousel;
    private RenderFragment footer;

    private TerminalRegister form;
}
