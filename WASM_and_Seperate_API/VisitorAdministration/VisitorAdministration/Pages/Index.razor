@page "/"
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<div style="max-width:400px; margin:auto; margin-top:40px; text-align:center;">
    <h2 style="margin-bottom:25px;">Log in with your NBG-Credentials</h2>
    <MudCard>
        <MudCardContent>
            <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                <MudTextField T="string" Label="Email" @ref="emailField"/>
                <MudTextField T="string" Label="Password" @ref="pwField"></MudTextField>
            </MudForm>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Log In</MudButton>
        </MudCardActions>
    </MudCard>
</div>



@code {
    bool success;
    string[] errors = { };
    MudTextField<string> emailField;
    MudTextField<string> pwField;
    MudForm form;

}